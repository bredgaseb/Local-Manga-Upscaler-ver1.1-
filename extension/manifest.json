{
  "manifest_version": 3,
  "name": "Local Manga Upscaler",
  "version": "1.2.0", 
  "description": "Завантажує зображення для локального апскейлу через Real-ESRGAN.",
  
  "permissions": [
    "downloads",     
    "contextMenus",  
    "activeTab",     
    "scripting"      
  ],
  
  "host_permissions": [
    "<all_urls>"     
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_title": "Local Manga Upscaler"
  }
}